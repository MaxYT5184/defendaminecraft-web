    <script>
        // Mobile menu toggle
        const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
        const mainNav = document.querySelector('.main-nav');
        
        if (mobileMenuToggle && mainNav) {
            mobileMenuToggle.addEventListener('click', () => {
                mainNav.classList.toggle('active');
                mobileMenuToggle.classList.toggle('active');
            });
        }
        
        // Close mobile menu when clicking outside
        document.addEventListener('click', (e) => {
            if (!e.target.closest('.header-container') && mainNav) {
                mainNav.classList.remove('active');
                if (mobileMenuToggle) mobileMenuToggle.classList.remove('active');
            }
        });
        
        // Navbar Style Switching
        const navbarStyleBtn = document.getElementById('navbar-style-btn');
        const navbarOptions = document.getElementById('navbar-options');
        const body = document.getElementById('main-body');
        const sidebarNav = document.getElementById('sidebar-nav');
        const bottomNav = document.getElementById('bottom-nav');
        const siteHeader = document.querySelector('.site-header');
        const siteFooter = document.querySelector('.site-footer');
        
        // Load saved navbar style
        const savedStyle = localStorage.getItem('navbar-style') || 'top';
        setNavbarStyle(savedStyle);
        
        // Toggle navbar options
        if (navbarStyleBtn) {
            navbarStyleBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                navbarOptions.classList.toggle('show');
            });
        }
        
        // Handle navbar style selection
        document.querySelectorAll('.navbar-option').forEach(option => {
            option.addEventListener('click', (e) => {
                e.stopPropagation();
                const style = option.dataset.style;
                setNavbarStyle(style);
                localStorage.setItem('navbar-style', style);
                navbarOptions.classList.remove('show');
                
                // Update active option
                document.querySelectorAll('.navbar-option').forEach(opt => opt.classList.remove('active'));
                option.classList.add('active');
            });
        });
        
        // Close options when clicking outside
        document.addEventListener('click', () => {
            if (navbarOptions) navbarOptions.classList.remove('show');
        });
        
        function setNavbarStyle(style) {
            // Remove all navbar style classes
            body.classList.remove('navbar-style-top', 'navbar-style-sidebar', 'navbar-style-bottom');
            
            // Add the selected style class
            body.classList.add(`navbar-style-${style}`);
            
            // Show/hide appropriate navigation elements
            switch(style) {
                case 'top':
                    if (siteHeader) siteHeader.style.display = 'block';
                    if (sidebarNav) sidebarNav.classList.remove('active');
                    if (bottomNav) bottomNav.classList.remove('active');
                    if (siteFooter) siteFooter.style.display = 'block';
                    break;
                case 'sidebar':
                    if (siteHeader) siteHeader.style.display = 'none';
                    if (sidebarNav) sidebarNav.classList.add('active');
                    if (bottomNav) bottomNav.classList.remove('active');
                    if (siteFooter) siteFooter.style.display = 'block';
                    break;
                case 'bottom':
                    if (siteHeader) siteHeader.style.display = 'none';
                    if (sidebarNav) sidebarNav.classList.remove('active');
                    if (bottomNav) bottomNav.classList.add('active');
                    if (siteFooter) siteFooter.style.display = 'none';
                    break;
            }
        }
        
        // Sidebar close functionality
        const sidebarClose = document.getElementById('sidebar-close');
        if (sidebarClose) {
            sidebarClose.addEventListener('click', () => {
                setNavbarStyle('top');
                localStorage.setItem('navbar-style', 'top');
                document.querySelectorAll('.navbar-option').forEach(opt => opt.classList.remove('active'));
                document.querySelector('.navbar-option[data-style="top"]').classList.add('active');
            });
        }
    </script>
