<%- include('../partials/header') %>
    <div class="page-header">
        <div class="container">
            <h1>Simple, Transparent Pricing</h1>
            <p>Choose the perfect plan for your website's security needs</p>
        </div>
    </div>

    <section class="section">
        <div class="container">
            <div class="pricing-switch">
                <span>Billed Monthly</span>
                <label class="switch">
                    <input type="checkbox" id="billing-toggle">
                    <span class="slider round"></span>
                </label>
                <span>Billed Annually <span class="discount-badge">Save 20%</span></span>
            </div>

            <div class="pricing-grid">
                <!-- Free Plan -->
                <div class="pricing-card">
                    <div class="pricing-header">
                        <h3>Free</h3>
                        <div class="price">
                            <span class="currency">$</span>
                            <span class="amount">0</span>
                            <span class="period">/month</span>
                        </div>
                        <p class="price-yearly">$0 billed annually</p>
                    </div>
                    <div class="pricing-features">
                        <ul>
                            <li><i class="fas fa-check"></i> Up to 10,000 verifications/month</li>
                            <li><i class="fas fa-check"></i> Basic bot protection</li>
                            <li><i class="fas fa-check"></i> Community support</li>
                            <li><i class="fas fa-check"></i> Basic analytics dashboard</li>
                            <li class="disabled"><i class="fas fa-times"></i> Advanced AI protection</li>
                            <li class="disabled"><i class="fas fa-times"></i> Priority support</li>
                            <li class="disabled"><i class="fas fa-times"></i> Custom branding</li>
                        </ul>
                    </div>
                    <div class="pricing-footer">
                        <a href="/signup" class="btn btn-outline btn-block">Get Started</a>
                    </div>
                </div>

                <!-- Pro Plan -->
                <div class="pricing-card featured">
                    <div class="popular-badge">Most Popular</div>
                    <div class="pricing-header">
                        <h3>Pro</h3>
                        <div class="price">
                            <span class="currency">$</span>
                            <span class="amount">9</span>
                            <span class="period">/month</span>
                        </div>
                        <p class="price-yearly">$7.20/month billed annually</p>
                    </div>
                    <div class="pricing-features">
                        <ul>
                            <li><i class="fas fa-check"></i> Up to 100,000 verifications/month</li>
                            <li><i class="fas fa-check"></i> Advanced AI bot protection</li>
                            <li><i class="fas fa-check"></i> Priority support</li>
                            <li><i class="fas fa-check"></i> Advanced analytics & insights</li>
                            <li><i class="fas fa-check"></i> Custom styling options</li>
                            <li><i class="fas fa-check"></i> API access</li>
                            <li class="disabled"><i class="fas fa-times"></i> White-label solution</li>
                        </ul>
                    </div>
                    <div class="pricing-footer">
                        <a href="/signup?plan=pro" class="btn btn-primary btn-block">Get Started</a>
                    </div>
                </div>

                <!-- Enterprise Plan -->
                <div class="pricing-card">
                    <div class="pricing-header">
                        <h3>Enterprise</h3>
                        <div class="price">
                            <span class="currency">$</span>
                            <span class="amount">29</span>
                            <span class="period">/month</span>
                        </div>
                        <p class="price-yearly">$23.20/month billed annually</p>
                    </div>
                    <div class="pricing-features">
                        <ul>
                            <li><i class="fas fa-check"></i> Unlimited verifications</li>
                            <li><i class="fas fa-check"></i> Enterprise-grade AI protection</li>
                            <li><i class="fas fa-check"></i> 24/7 Priority support</li>
                            <li><i class="fas fa-check"></i> Advanced analytics & reporting</li>
                            <li><i class="fas fa-check"></i> Complete white-label solution</li>
                            <li><i class="fas fa-check"></i> Custom integrations</li>
                            <li><i class="fas fa-check"></i> Dedicated account manager</li>
                        </ul>
                    </div>
                    <div class="pricing-footer">
                        <a href="/contact" class="btn btn-outline btn-block">Contact Sales</a>
                    </div>
                </div>
            </div>

            <div class="pricing-faq">
                <h2 class="text-center">Frequently Asked Questions</h2>
                
                <div class="faq-item">
                    <div class="faq-question">
                        <h3>What payment methods do you accept?</h3>
                        <span class="faq-toggle"><i class="fas fa-chevron-down"></i></span>
                    </div>
                    <div class="faq-answer">
                        <p>We accept all major credit cards (Visa, Mastercard, American Express), PayPal, and cryptocurrency (Bitcoin, Ethereum).</p>
                    </div>
                </div>

                <div class="faq-item">
                    <div class="faq-question">
                        <h3>Can I upgrade or downgrade my plan later?</h3>
                        <span class="faq-toggle"><i class="fas fa-chevron-down"></i></span>
                    </div>
                    <div class="faq-answer">
                        <p>Yes, you can upgrade or downgrade your plan at any time from your account dashboard. Changes will be prorated accordingly.</p>
                    </div>
                </div>

                <div class="faq-item">
                    <div class="faq-question">
                        <h3>Is there a free trial available?</h3>
                        <span class="faq-toggle"><i class="fas fa-chevron-down"></i></span>
                    </div>
                    <div class="faq-answer">
                        <p>Yes, we offer a 14-day free trial for all paid plans. No credit card is required to start your trial.</p>
                    </div>
                </div>

                <div class="faq-item">
                    <div class="faq-question">
                        <h3>What kind of support is included?</h3>
                        <span class="faq-toggle"><i class="fas fa-chevron-down"></i></span>
                    </div>
                    <div class="faq-answer">
                        <p>All plans include email support. Pro and Enterprise plans include priority support with faster response times. Enterprise customers also get a dedicated account manager.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section section-alt">
        <div class="container text-center">
            <h2>Need a custom solution?</h2>
            <p>We offer custom enterprise plans for large Minecraft networks and special requirements.</p>
            <a href="/contact" class="btn btn-outline">Contact Sales</a>
        </div>
    </section>

    <script>
        // Toggle billing period
        const billingToggle = document.getElementById('billing-toggle');
        const prices = document.querySelectorAll('.price');
        const yearlyPrices = document.querySelectorAll('.price-yearly');
        
        billingToggle?.addEventListener('change', function() {
            prices.forEach(price => price.style.display = this.checked ? 'none' : 'block');
            yearlyPrices.forEach(price => price.style.display = this.checked ? 'block' : 'none');
        });

        // FAQ accordion
        const faqQuestions = document.querySelectorAll('.faq-question');
        
        faqQuestions.forEach(question => {
            question.addEventListener('click', () => {
                const item = question.parentElement;
                const isOpen = item.classList.contains('active');
                
                // Close all other items
                document.querySelectorAll('.faq-item').forEach(faqItem => {
                    faqItem.classList.remove('active');
                });
                
                // Toggle current item
                if (!isOpen) {
                    item.classList.add('active');
                }
            });
        });
    </script>
<%- include('../partials/footer') %>
