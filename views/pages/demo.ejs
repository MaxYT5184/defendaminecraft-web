    </div>
</section>

<script src="/js/recaptcha-cdn.js"></script>
<script>
    // Demo reCAPTCHA functionality using our CDN library
    document.addEventListener('DOMContentLoaded', () => {
        const continueBtn = document.getElementById('continue-btn');
        const verificationSuccess = document.getElementById('verification-success');
        const resetBtn = document.getElementById('reset-btn');
        
        // Initialize DefendAMinecraft reCAPTCHA
        const widgetId = DefendAMinecraft.render('recaptcha-widget', {
            sitekey: 'da_live_demo123456789abcdef',
            theme: 'dark',
            size: 'normal',
            callback: function(token) {
                console.log('Verification successful!', token);
                if (continueBtn) continueBtn.disabled = false;
                
                // Show success message after a short delay
                setTimeout(() => {
                    if (verificationSuccess) {
                        document.querySelector('.demo-card').style.display = 'none';
                        verificationSuccess.classList.remove('hidden');
                    }
                }, 1000);
            },
            'error-callback': function(error) {
                console.error('Verification failed:', error);
                alert('Verification failed. Please try again.');
            }
        });
        
        if (resetBtn) {
            resetBtn.addEventListener('click', () => {
                DefendAMinecraft.reset(widgetId);
                if (continueBtn) continueBtn.disabled = true;
                document.querySelector('.demo-card').style.display = 'block';
                if (verificationSuccess) verificationSuccess.classList.add('hidden');
            });
        }
    });
</script>

